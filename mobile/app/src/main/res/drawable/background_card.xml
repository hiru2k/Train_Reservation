<?xml version="1.0" encoding="utf-8"?>
<!--
 * Filename: background_card.xml
 * Description: Contains the background of the card view which is used in the login, register and profile screens 
 * Author: Hiruni Mudannayake
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color='@color/primaryColor' />
            <gradient android:angle="-90" android:startColor='@color/white' android:endColor='@color/white' />
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
</selector>
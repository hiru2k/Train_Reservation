<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004785"

    tools:context=".activities.NewReservationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="418dp"
        android:layout_height="238dp"
        android:layout_marginTop="88dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welcomeLayout">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:padding="1dp">


            <TextView
                android:id="@+id/trainNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:padding="13dp"
                android:text="Train Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startStationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:padding="13dp"
                android:text="Start Station"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/endStationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:padding="13dp"
                android:text="End Station"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/startTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:padding="13dp"
                android:text="Start Time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/endTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:padding="13dp"
                android:text="End Time"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="411dp"
        android:layout_height="323dp"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"

        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:padding="1dp">

            <EditText
                android:id="@+id/arrivalStationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_fields"
                android:drawablePadding="20dp"
                android:hint="Arrival Station"
                android:inputType="text"
                android:padding="13dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/departureStationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_fields"
                android:drawablePadding="20dp"
                android:hint="Departure Station"
                android:inputType="text"
                android:padding="13dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/seatCountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_fields"
                android:drawablePadding="20dp"
                android:hint="Seat Count"
                android:inputType="number"
                android:padding="13dp"
                android:textSize="16sp" />


            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/primary_button"
                android:text="Submit Booking"
                android:textColor="@color/white"
                app:cornerRadius="800dip" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/welcomeLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserve Your Train"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="316dp"
        android:layout_height="83dp"
        android:background="@drawable/image_rounded_corners"
        android:elevation="10dp"
        android:src="@drawable/trainr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505"
        app:srcCompat="@drawable/trainr" />

</androidx.constraintlayout.widget.ConstraintLayout>